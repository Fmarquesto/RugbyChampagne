{% extends 'base/baseTemplate.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12" id="categories">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 id="subjectName">Categorias</h4>
                </div>
                <div class="panel-body">
                    <div class="clearfix"></div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered dt-responsive nowrap" id="categoryList">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $( document ).ready(function() {
            loadTable();
        });

        function loadTable()
        {
            $('#categoryList').dataTable( {
                "destroy": true,
                "data":{{ data | raw}},
                "columns": [
                    {"data": "category_id"},
                    {"data": "name"},
                    {"data": "category_id"}
                ],
                "language": {
                    "url": "{{ path_for('datatable.languaje') }}"
                }
            } );
        }
    </script>
{% endblock %}