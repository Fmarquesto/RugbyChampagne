{% extends 'base/baseTemplate.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12" id="careers">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 id="subjectName">Alta de Campeonato</h4>
                </div>
                <div class="panel-body">
                    <form autocomplete="off" method="post" action="{{ path_for('championship.create') }}">

                        <div class="form-group">
                            <label for="championshipName">Nombre del Campeonato</label>
                            <input type="text" name="championshipName" class="form-control" id="championshipName" placeholder="Campeonato">
                        </div>

                        <div class="form-group">
                            <label for="category">Categoria</label>
                            <select class="form-control" name="category">
                                <option value="0">Seleccione una opcion </option>
                                {% for category in categories %}
                                    <option value="{{ category.category_id }}">{{ category.name|e }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="winPoints">Puntos por Ganar</label>
                            <input type="number" name="winPoints" class="form-control" id="winPoints" placeholder="Puntos por ganar...">
                        </div>
                        <div class="form-group">
                            <label for="losePoints">Puntos por Perder</label>
                            <input type="number" name="losePoints" class="form-control" id="losePoints" placeholder="Puntos por perder...">
                        </div>
                        <div class="form-group">
                            <label for="drawPoints">Puntos por Empatar</label>
                            <input type="number" name="drawPoints" class="form-control" id="drawPoints" placeholder="Puntos por empatar...">
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="round" id="optionsRadios1" value="IDA" checked>
                                IDA
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="round" id="optionsRadios2" value="VUELTA">
                                VUELTA
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="round" id="optionsRadios3" value="IDAVUELTA">
                                IDA Y VUELTA
                            </label>
                        </div>
                        <button type="submit" class="btn btn-default">Guardar</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}