{% extends 'base/baseTemplate.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12" id="careers">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 id="createTittle">Alta de jugador</h4>
                </div>
                <div class="panel-body">
                    <form autocomplete="off" method="post" action="{{ path_for('team.create') }}">

                        <div class="form-group">
                            <label for="playerName">Jugador</label>
                            <input type="text" name="playerName" class="form-control" id="playerName" placeholder="Nombre..">
                        </div>
                        <div class="form-group">
                            <label for="country">Pais</label>
                            <select class="form-control" name="country">
                                <option value="0">Seleccione una opcion </option>
                                {% for country in countries %}
                                    <option value="{{ country.country_id }}">{{ country.name|e }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-default">Guardar</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}